# Upcoming source: fotmob or auto
UPCOMING_SOURCE=fotmob
# Optional FotMob matchday date (YYYYMMDD). If empty, uses FotMob's default (today).
UPCOMING_DATE=
# Fetch a multi-day window (1-14). Use 7 for a full weekend slate.
UPCOMING_WINDOW_DAYS=7
# Minimum seconds between manual upcoming fetches
UPCOMING_POLL_SECS=60

# Live Pulse match fetch (FotMob)
# Optional date override (YYYYMMDD). If empty, uses FotMob's default (today).
PULSE_DATE=
PULSE_POLL_SECS=15

# Match details auto-refresh (lineups/events/stats) when live
DETAILS_POLL_SECS=60
# Auto-warm player/squad cache after analysis loads: off, missing, or full
AUTO_WARM_CACHE=off

# Market odds blending (The Odds API)
ODDS_ENABLED=true
ODDS_PROVIDER=theoddsapi
ODDS_API_KEY=
ODDS_REGIONS=us
ODDS_MODEL_WEIGHT=0.65
ODDS_MARKET_WEIGHT=0.35
ODDS_STALE_TTL_MIN=30
ODDS_REFRESH_SECS=120
ODDS_MATCH_TIME_TOLERANCE_MIN=90

# UI league filters (optional). If empty, fallback to name matching.
APP_LEAGUE_PREMIER_IDS=47
APP_LEAGUE_LALIGA_IDS=87
APP_LEAGUE_WORLDCUP_IDS=77
